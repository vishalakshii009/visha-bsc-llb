#include<stdio.h>
int main()
{
    int marks[6];//array to store marks of 6 subjects
    int i, total=0;
    float percentage;
    printf("enter marks of 6 subjects:\n");
    //taking input
    for(i=0; i<6; i++) {
        printf("subject %d:", i+1);
        scanf("%d, &marks[1]");
        total +=marks[i];
    }
    //calculating percentage
    percentage = (float)total/6;
    printf("\ntotal marks = %d\n", total);
    printf("percentage = %.2f%%\n", percentage);
}
